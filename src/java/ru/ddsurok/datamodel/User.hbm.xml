<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="ru.ddsurok.datamodel.User" table="m_user" >
        <id name="Id" type="java.lang.Integer">
            <column name="id" precision="5" scale="0" />
            <generator class="assigned"/>
        </id>
        <property name="NickName" type="java.lang.String">
            <column name="nick" length="100" not-null="true" unique="true" />
        </property>
        <property name="HashPswd" type="java.lang.String">
            <column name="hashpswd" not-null="true" />
        </property>
        <property name="email" type="java.lang.String">
            <column name="email" not-null="true" unique="true" />
        </property>
        <property name="Family" type="java.lang.String">
            <column name="family" />
        </property>
        <property name="Name" type="java.lang.String">
            <column name="name" />
        </property>
    </class>
</hibernate-mapping>
